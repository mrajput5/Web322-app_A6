<div class="row">
    <div class="col-md-12">
          <a href="/posts/add" class="btn btn-success pull-right">Add Post</a>
          <h2>Posts</h2>
          <hr />
          <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Post ID</th>
                        <th>Title</th>
                        <th>Post Date</th>
                        <th>Category</th>
                        <th>Published</th>
                    </tr>
                </thead>
                <tbody>
                {{#unless posts}}
                    <tr>
                        <div class="col-md-12 text-center">
                            <strong>{{message}}</strong>
                        </div>
                    </tr>
                {{/unless}}
                {{#each posts}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{title}}</td>
                        <td>{{postDate}}</td>
                        <td>
                            <a href=/posts?category={{category}}>{{category}}</a>
                        </td>
                        <td>{{published}}</td>
                        <td>
                            <a href=/posts/delete/{{id}} class="btn btn-danger pull-right">Remove</a>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
          </div>
    </div>
</div>